%h2
  = flash[:notice]
  - flash.discard

%table{ :cellspacing => 0, :cellpadding => 0, :width => "100%"}
  %thead
    %tr
      %td{ :width => "20%" }
        %p
          Date
      %td{ :width => "30%" }
        %p
          In Time
      %td{ :width => "30%" }
        %p
          Out Time
      %td{ :width => "20%" }
        %p
          Time Duration
  %tbody
    - for time_sheet in @time_sheets
      %tr
        %td
          %p
            = time_sheet.in_time.strftime("%d-%m-%Y") unless time_sheet.in_time.nil?
        %td
          %p
            = time_sheet.in_time.strftime("%H:%M:%S") unless time_sheet.in_time.nil?
        %td
          %p
            = time_sheet.out_time.strftime("%H:%M:%S") unless time_sheet.out_time.nil?
        %td
          %p
            = get_total_duration(time_sheet)  unless time_sheet.out_time.nil?
  %tr
    %td{ :colspan => 4 }
      %p
        = will_paginate @time_sheets

